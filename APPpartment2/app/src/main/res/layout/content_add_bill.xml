<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_bill"
    tools:context="net.brooke.apppartment2.AddBillActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:id="@+id/button6"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/button7"
        android:layout_marginTop="41dp"
        android:onClick="selectRoomates"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenly"
        android:id="@+id/button7"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:onClick="selectRoomates"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This option will split the bill evenly. i.e. $100 divided among 4 people means each person owes $25 each."
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This option will allow you to divide the bill into different portions. i.e. $100 can be divided into $10, $20, $30, and $40 among 4 people."
        android:id="@+id/textView11"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true" />

</RelativeLayout>
